{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices",
    "security:openssf-scorecard",
    ":gitSignOff",
    ":maintainLockFilesWeekly",
    ":automergeMinor",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "npm:unpublishSafe",
    ":rebaseStalePrs",
    "mergeConfidence:all-badges",
    ":configMigration"
  ],
  "commitMessageLowerCase": "auto",
  "minimumReleaseAge": "4 days",
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ]
  },
  "enabledManagers": [
    "npm",
    "github-actions",
    "dockerfile",
    "docker-compose"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "actions"
      ],
      "groupName": "github actions"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "slsa-framework/slsa-github-generator"
      ],
      "pinDigests": false
    },
    {
      "description": "Node.js dependencies - Major updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "description": "Development dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "dev dependencies",
      "addLabels": [
        "dev-deps"
      ]
    },
    {
      "description": "Core dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "core dependencies",
      "addLabels": [
        "core-deps"
      ]
    },
    {
      "description": "Node.js engine",
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "matchPackageNames": [
        "node"
      ],
      "rangeStrategy": "replace",
      "labels": [
        "node-engine"
      ]
    },
    {
      "description": "Vue.js ecosystem",
      "matchManagers": [
        "npm"
      ],
      "groupName": "vue ecosystem",
      "addLabels": [
        "vue",
        "frontend"
      ],
      "matchPackageNames": [
        "/^vue/",
        "/^@vue//",
        "/^nuxt/"
      ]
    },
    {
      "description": "Testing dependencies",
      "matchManagers": [
        "npm"
      ],
      "groupName": "testing dependencies",
      "addLabels": [
        "testing"
      ],
      "matchPackageNames": [
        "/test/",
        "/junit/",
        "/vitest/",
        "/playwright/"
      ]
    },
    {
      "description": "Docker base images",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "addLabels": [
        "docker",
        "infrastructure"
      ]
    },
    {
      "description": "TailwindCSS ecosystem",
      "matchManagers": [
        "npm"
      ],
      "groupName": "tailwind ecosystem",
      "addLabels": [
        "tailwind",
        "frontend"
      ],
      "matchPackageNames": [
        "/tailwind/",
        "/@tailwindcss//"
      ]
    }
  ]
}
